<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jfeteira.myfirstapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Teste de Jorge Feteira"
        android:theme="@style/AppTheme" >

        <!--

        NOTA: android:configChanges="keyboardHidden|orientation|screenSize"
              serve para nÃ£o limpar as variaveis quando se roda o ecran quer na Vertical quer na Horizontal -->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
